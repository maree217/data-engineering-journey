{
    "name": "Data Engineering Course - Phase 1",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "18"
        },
        "ghcr.io/devcontainers/features/azure-cli:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-vscode.vscode-json",
                "ms-vscode.live-server",
                "ms-vscode.azurecli",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ms-toolsai.jupyter",
                "ms-azuretools.vscode-azureresourcegroups",
                "ms-vscode.powershell",
                "bradlc.vscode-tailwindcss",
                "formulahendry.auto-rename-tag"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.formatting.provider": "black",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "editor.formatOnSave": true,
                "editor.codeActionsOnSave": {
                    "source.organizeImports": true
                },
                "liveServer.settings.donotShowInfoMsg": true,
                "liveServer.settings.port": 3000
            }
        }
    },

    "forwardPorts": [3000, 8000, 8080, 8888, 5432, 1433],
    "portsAttributes": {
        "3000": {
            "label": "HTML Dashboard",
            "onAutoForward": "openPreview"
        },
        "8888": {
            "label": "Jupyter Lab",
            "onAutoForward": "notify"
        },
        "5432": {
            "label": "PostgreSQL",
            "onAutoForward": "ignore"
        },
        "1433": {
            "label": "SQL Server",
            "onAutoForward": "ignore"
        }
    },

    "postCreateCommand": "pip install -r requirements.txt && npm install -g live-server",

    "remoteUser": "vscode",

    "mounts": [
        "source=${localWorkspaceFolder},target=/workspaces/data-ai-course,type=bind,consistency=cached"
    ]
}